<h3>New features</h3>
<h4 class="mb-1">Count: {{this.countOfFeatureChanges}}</h4>

{{#if this.countOfFeatureChanges}}
  <ul>
    {{#each this.model as |model|}}
      {{#each model.changes as |change|}}
        {{#if change.feature}}
          <li data-test-feature>
            {{change.title}}: 
            <a href={{change.link}} rel="noopener noreferrer" target="_blank" title="Check version {{model.id}} link for more info">
              ({{model.version}})
            </a>
          </li>
        {{/if}}
      {{/each}}
    {{/each}}
  </ul>
{{else}}
  <p>No new features</p>
{{/if}}

